<%= simple_form_for article, remote: true do |f| %>
  <div class="article-card">
    <div class="photo">
      <%= cl_image_tag article.photo, height: 300, width: 400, crop: :fill %>
    </div>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit 'Edit article', class: 'btn btn-success' %>
    <h2><%= f.input :title %></h2>
    <p><%= f.input :content %></p>
    <%= f.submit 'Edit article', class: 'btn btn-success' %>
  </div>
<% end %>
